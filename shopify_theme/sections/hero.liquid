<section class="home-hero">
    <div class="hero-slider">
        <!-- We can loop through blocks to make the slider dynamic -->
        {% for block in section.blocks %}
        <div class="hero-slide" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url: width: 1920 }}" alt="{{ block.settings.heading }}">
            {% else %}
                <img src="{{ 'hero-bg.png' | asset_url }}" alt="Fallback Hero">
            {% endif %}
            
            <div class="hero-content">
                <span class="eyebrow mx-auto">{{ block.settings.subheading }}</span>
                <h1 class="hero-title">{{ block.settings.heading }}</h1>
                <a href="{{ block.settings.link_url }}" class="btn-hero mx-auto">{{ block.settings.link_text }}</a>
            </div>
        </div>
        {% endfor %}
    </div>
</section>

{% schema %}
{
  "name": "Hero Slider",
  "max_blocks": 5,
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "NEW COLLECTION"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "BODY CANDLES"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Button Text",
          "default": "DISCOVER NOW"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
