<footer class="site-footer bg-secondary">
    <div class="container">
        <div class="footer-main-grid">
            <!-- 1. Newsletter Column -->
            <div class="footer-newsletter-col">
                <h3 class="newsletter-heading font-serif">{{ section.settings.newsletter_title }}</h3>
                <form class="newsletter-form-stacked" action="{{ routes.account_url }}" method="post">
                    <input type="email" placeholder="YOUR EMAIL" required name="contact[email]">
                    <button type="submit">SUBSCRIBE</button>
                </form>
                <div class="footer-social-group">
                    {% if settings.social_instagram_link != blank %}
                    <a href="{{ settings.social_instagram_link }}" target="_blank" aria-label="Instagram">
                        <svg viewBox="0 0 448 512" width="32" height="32">
                            <path fill="currentColor"
                                d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z" />
                        </svg>
                    </a>
                    {% endif %}
                </div>
            </div>

            <!-- Link Columns -->
            {% for block in section.blocks %}
            <div class="footer-links-col">
                <h4 class="font-sans">{{ block.settings.title }}</h4>
                <ul>
                    {% for link in linklists[block.settings.menu].links %}
                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            {% endfor %}
        </div>

        <div class="footer-bottom-row">
            <span class="copyright text-muted">Â© {{ 'now' | date: "%Y" }} SCENTS BY SARA. ALL RIGHTS RESERVED.</span>
            <div class="payment-icons">
                <img src="{{ 'payment-icons.png' | asset_url }}" alt="Payment Icons">
            </div>
        </div>
    </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter Title",
      "default": "JOIN OUR NEWSLETTER"
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Menu Title"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ]
}
{% endschema %}
