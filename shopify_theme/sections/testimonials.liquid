<section class="section-block testimonials-section bg-primary text-center">
    <div class="container">
        <h2 class="section-title font-serif text-h1">{{ section.settings.title }}</h2>
        
        {% if section.settings.show_stars %}
        <div class="stars">
            <span>★ ★ ★ ★ ★</span>
        </div>
        {% endif %}

        <div class="testimonials-slider">
            {% for block in section.blocks %}
                <div class="testimonial-slide {% if forloop.first %}active{% endif %}" {{ block.shopify_attributes }}>
                    <div class="testimonial-content">
                        <span class="quote-mark left">"</span>
                        <p class="testimonial-text">{{ block.settings.quote }}</p>
                        <span class="quote-mark right">"</span>
                        <p class="testimonial-author">{{ block.settings.author }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% if section.blocks.size > 1 %}
        <!-- Slider Dots -->
        <div class="slider-dots">
            {% for block in section.blocks %}
                <span class="dot {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}"></span>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "CUSTOMER TESTIMONIALS"
    },
    {
        "type": "checkbox",
        "id": "show_stars",
        "label": "Show Stars",
        "default": true
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
            "type": "textarea",
            "id": "quote",
            "label": "Quote",
            "default": "Absolutely stunning pieces that instantly elevated my living room."
        },
        {
            "type": "text",
            "id": "author",
            "label": "Author",
            "default": "SARAH JENNINGS"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        { "type": "testimonial" },
        { "type": "testimonial" },
        { "type": "testimonial" }
      ]
    }
  ]
}
{% endschema %}
